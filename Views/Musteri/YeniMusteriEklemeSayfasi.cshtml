@model Mağaza_Ürün_Takip_Sistemi.Models.Entity.MUSTERILER
@{
    ViewBag.Title = "YeniMusteriEklemeSayfasi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YENİ ÜRÜN EKLEME SAYFASINDASINIZ....</h2>
<br />
<br />

@using (Html.BeginForm("YeniMusteriyiEkle", "Musteri", FormMethod.Post))
{
    <label>Yeni Müşteri Adı</label>
    @Html.TextBoxFor(x => x.ad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ad, "", new { @style = "color : green" })
    <br />
    <br />
    <label>Yeni Müşteri Soyadı</label>
    @Html.TextBoxFor(x => x.soyad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.soyad, "", new { @style = "color : blue" })
    <br />
    <br />
    <label>Yeni Müşterinin Yaşadığı Şehir</label>
    @Html.TextBoxFor(x => x.sehir, new { @class = "form-control" })
    <br />
    <br />
    <label>Yeni Müşterinin Bakiyesi</label>
    @Html.TextBoxFor(x => x.bakiye, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.bakiye, "", new { @style = "color : blue" })

    <br />
    <br />
    <button class="btn btn-danger">EKLE</button>
}