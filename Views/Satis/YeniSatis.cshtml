@model Mağaza_Ürün_Takip_Sistemi.Models.Entity.SATISLAR
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Personel Adı</label>
    @Html.DropDownListFor(x => x.PERSONELLER.id, (List<SelectListItem>)ViewBag.ddlpersonel, new { @class = "form-control" })
    <br />
    <br />
    <label>Ürün Adı</label>
    @Html.DropDownListFor(x => x.URUNLER.id, (List<SelectListItem>)ViewBag.ddlurun, new { @class = "form-control" })
    <br />
    <br />
    <label>Müşteri Adı</label>
    @Html.DropDownListFor(x => x.MUSTERILER.id, (List<SelectListItem>)ViewBag.ddlmusteri, new { @class = "form-control" })
    <br />
    <br />
    <label>Toplam Satış Fiyatı</label>
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.fiyat, "", new { @style = "color:red" })
    <br />
    <br />
    <button class="btn btn-danger">EKLE</button>
</form>

