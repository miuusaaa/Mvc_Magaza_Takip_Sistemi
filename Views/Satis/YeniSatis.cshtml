@model Mağaza_Ürün_Takip_Sistemi.Models.Entity.SATISLAR
@{
    ViewBag.Title = "Yeni Satış Kaydı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="animate__animated animate__zoomIn" style="background: rgba(255,255,255,0.2); padding: 40px; border-radius: 20px; box-shadow: 0 20px 50px rgba(0,0,0,0.4); border: 1px solid rgba(255,255,255,0.1);">

            <div style="text-align: center; margin-bottom: 30px;">
                <i class="fa fa-shopping-basket fa-3x" style="color: white; margin-bottom: 15px;"></i>
                <h2 style="color: white; font-weight: 300;">YENİ SATIŞ</h2>
                <hr style="border-color: rgba(255,255,255,0.2);" />
            </div>

            @using (Html.BeginForm("YeniSatis", "Satis", FormMethod.Post))
            {
                <div class="form-group">
                    <label style="color: white;"><i class="fa fa-user-tie"></i> İşlemi Yapan Personel</label>
                    @Html.DropDownListFor(x => x.PERSONELLER.id, (List<SelectListItem>)ViewBag.ddlpersonel, "Personel Seçiniz", new { @class = "form-control custom-input" })
                </div>

                <div class="form-group" style="margin-top: 15px;">
                    <label style="color: white;"><i class="fa fa-box"></i> Satılan Ürün</label>
                    @Html.DropDownListFor(x => x.URUNLER.id, (List<SelectListItem>)ViewBag.ddlurun, "Ürün Seçiniz", new { @class = "form-control custom-input" })
                </div>

                <div class="form-group" style="margin-top: 15px;">
                    <label style="color: white;"><i class="fa fa-users"></i> Alıcı Müşteri</label>
                    @Html.DropDownListFor(x => x.MUSTERILER.id, (List<SelectListItem>)ViewBag.ddlmusteri, "Müşteri Seçiniz", new { @class = "form-control custom-input" })
                </div>

                <div class="form-group" style="margin-top: 15px;">
                    <label style="color: white;"><i class="fa fa-lira-sign"></i> Toplam Satış Fiyatı</label>
                    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control custom-input", placeholder = "0.00", id = "txtFiyat" })
                    @Html.ValidationMessageFor(x => x.fiyat, "", new { @class = "validation-text" })
                </div>

                <div style="margin-top: 35px;">
                    <button class="btn btn-success btn-lg btn-block" style="border-radius: 12px; font-weight: bold; background: #27ae60; border: none; padding: 15px;">
                        <i class="fa fa-check-circle"></i> SATIŞI TAMAMLA
                    </button>

                    <a href="/Satis/Index" class="btn btn-link btn-block" style="color: white; opacity: 0.8; text-decoration: none;">
                        <i class="fa fa-times"></i> Vazgeç
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .custom-input {
        background: rgba(255,255,255,0.9) !important;
        border: none !important;
        border-radius: 10px !important;
        height: 50px !important;
        font-weight: 500;
        color: #333 !important;
    }

        .custom-input:focus {
            background: #fff !important;
            box-shadow: 0 0 15px rgba(255,255,255,0.5) !important;
            transform: translateY(-2px);
        }

    .validation-text {
        color: #ff4757;
        font-size: 12px;
        font-weight: bold;
        display: block;
        margin-top: 5px;
    }

    label i {
        margin-right: 8px;
        opacity: 0.9;
    }
</style>