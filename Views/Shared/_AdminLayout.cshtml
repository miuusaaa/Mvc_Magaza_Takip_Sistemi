@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Mağaza</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">


    <!-- Bootstrap 3 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- Animate.css -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #1d2671, #c33764);
        }

        /* NAVBAR */
        .navbar {
            background: rgba(255,255,255,0.15);
            border: none;
            border-radius: 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .nav-big .nav-link {
            font-size: 20px; /* yazıları büyüt */
            font-weight: 600;
            padding: 15px 25px;
            transition: all 0.3s ease;
        }

            .nav-big .nav-link:hover {
                transform: scale(1.1);
            }

        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
            font-size: 20px;
            animation: fadeInDown 1s;
        }

        .navbar-nav > li > a {
            color: #fff !important;
            font-size: 25px;
            transition: all .3s ease;
        }
            .navbar-nav > li > a i {
                margin-right: 12px;
                transition: transform .3s ease;
            }

            .navbar-nav > li > a:hover {
                background: rgba(255,255,255,0.2) !important;
                transform: scale(1.1);
                border-radius: 10px;
            }

        .navbar-nav > .active > a {
            background: rgba(0,0,0,0.3) !important;
            border-radius: 10px;
        }

        /* CONTENT AREA */
        .content-box {
            background: rgba(255,255,255,0.15);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 0 25px rgba(0,0,0,0.3);
            margin-top: 30px;
            animation: fadeInUp 1s;
        }

        h1, h2, h3, h4 {
            color: white;
        }

        label {
            color: white;
        }

        table {
            background-color: white;
            border-radius: 10px;
        }

        .btn {
            transition: transform .3s ease;
        }

            .btn:hover {
                transform: scale(1.05);
            }
    </style>
</head>

<body>

    <nav class="navbar navbar-default animate__animated animate__fadeInDown">
        <div class="container-fluid">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#mainNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span> 
                </button>
                <a style ="margin-right:150px"class="navbar-brand" href="#" > <i class="fa fa-store"></i>Mağazamıza Hoşgeldiniz</a>
            </div>

            <ul class="nav navbar-nav navbar-center">
                <li class="nav-item">
                    <a style="margin-right:80px" class="navbar-brand" href="/Anasayfa/Index"> <i class="fa fa-home"></i>Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a style="margin-right:80px" class="navbar-brand" href="/Urun/Index"><i class="fa fa-box"></i>Ürünler</a>
                </li>
                <li class="nav-item">
                    <a style=" margin-right: 80px" class="navbar-brand" href="/Kategori/Index"><i class="fa fa-tags"></i>Kategoriler</a>
                </li>
                <li class="nav-item">
                    <a style=" margin-right: 80px" class="navbar-brand" href="/Musteri/Index"><i class="fa fa-users"></i>Müşteriler</a>
                </li>
                <li class="nav-item">
                    <a style="margin-right: 80px" class="navbar-brand" href="/Satis/Index"><i class="fa fa-shopping-cart"></i>Satışlar</a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="/Admin/LogOut"><i class="fa fa-sign-out-alt"></i>Çıkış</a>
                </li>
            </ul>


        </div>
    </nav>

    <div class="container">
        <div class="content-box animate__animated animate__fadeInUp">
            @RenderBody()
        </div>
    </div>

</body>
</html>
